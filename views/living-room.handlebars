<!-- This is a placeholder for all products-->
<div class="row">
  <div class="col s12 m12">
    <div class="card product-display">
      <div class="row">
        <div class="col s12 m12">
          <div class="col s12 m12">
            <div class="card horizontal">

              <div class="card-image">
                <div class="card-action"></div>
                <img src="assets/images/1.jpeg">
              </div>
              <div class="card-stacked">
                <div class="card-content">
                  <h5>Let's make your home beautiful together</h5>
                  <div class="card-action"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="card-content">
        <div class="row">
          {{#each items}}
          <div class="col s12 m3">
            <div class="card main item">
              <div class="card-image">
                <img src="{{this.dataValues.img}}" width="90px" height="160px">
              </div>
              <div class="card-action">
                <p class="item product-name">Name: {{this.dataValues.name}}</p>
                <p class="item description">Description: {{this.dataValues.description}}</p>
                <p class="item price">Price: {{this.dataValues.price}}</p>
                <br>
                <button class="btn add-to-cart waves-effect waves-light" id="add-to-cart" type="submit" name="action" data-id="{{this.dataValues.id}}">Add to cart
                  <i class="material-icons right">add_shopping_cart</i>
                </button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

