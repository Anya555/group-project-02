<!--Class shopping-cart places chekout card at the right corner-->
<div class="container">
  <div class="col s12 m12">
    <div class="card cart hide">
      <div class="row">
        <div class="col s12 m12">
          <div class="col s12 m8">
            <h2 class="header">Your Items</h2>
            <hr>
            <br>

            <!--Placeholder for each item  in a cart-->
            <div class="shopping-cart">
              <div class="shopping-cart-header">
                <div class="card horizontal">
                  {{#each Carts}}
                    <p>Item Id: {{this.id}}</p>
                  <div class="card-image">
                    <img src="assets/images/shopping.png" width="100px" height="100px">
                  </div>
                  <div class="card-stacked">
                    <div class="card-content">
                      <p class="right green-text">Price: {{this.dataValues.price}}</p>
                      <br><br>
                      <p> {{this.dataValues.name}} <p>
                    </div>
                    <div class="card-action">
                      <a href="#"><i class="left  material-icons">file_download</i>Save for
                        later</a>
                      <a href="#" class="right"><i class="right  material-icons">clear</i>Remove
                        item</a>
                    </div>
                  </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>

          <!--Proceed to chekout card--->
          <!----->
        </div>
      </div>
    </div>
  </div>
</div>

